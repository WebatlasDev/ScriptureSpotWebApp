# Copy this file to .env.local and fill in your actual values
# IMPORTANT: This is a template file - DO NOT commit real credentials!

# Database
# For Supabase (Production):
DATABASE_URL="postgresql://postgres:[YOUR_PASSWORD]@db.[YOUR_PROJECT_REF].supabase.co:6543/postgres?pgbouncer=true"
# For local development:
# DATABASE_URL="postgresql://user:password@localhost:5432/dbname"

# Redis (Optional - for caching)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Elasticsearch (Optional - for advanced search)
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_NODE="http://localhost:9200"

# Clerk Authentication
# Get your keys from: https://dashboard.clerk.com
# Use TEST keys for development, PRODUCTION keys for deployment
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_publishable_key_here"
CLERK_SECRET_KEY="sk_test_your_secret_key_here"
CLERK_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# Clerk Production Configuration (uncomment for production)
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_live_your_production_key_here"
# CLERK_SECRET_KEY="sk_live_your_production_secret_here"

# Clerk Custom Domain (for production with custom domain)
# CLERK_FRONTEND_API="clerk.scripturespot.com"
# CLERK_ISSUER="https://clerk.scripturespot.com"
# CLERK_AUDIENCE="https://www.scripturespot.com"

# Clerk URLs (customize or use defaults)
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/"

# Resend Email Service
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY="re_your_api_key_here"
RESEND_FROM_EMAIL="noreply@yourdomain.com"
RESEND_AUDIENCE_ID="your_audience_id_here"

# Google Sheets API (Optional - for data imports)
GOOGLE_SHEETS_CLIENT_EMAIL="your-service-account@project.iam.gserviceaccount.com"
GOOGLE_SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
GOOGLE_APPLICATION_CREDENTIALS="path/to/credentials.json"

# Application URLs
NEXT_PUBLIC_APP_URL="http://localhost:5002"
NEXT_PUBLIC_API_URL="http://localhost:5002/api"
NODE_ENV="development"

# Admin Configuration
ADMIN_ROLE="super-admin"
